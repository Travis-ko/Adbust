.header{
display: inherit;
text-align: center;
margin: -10px;
background: black;
min-height: 110px;
}

.header > div {
display: inline-block;
flex-grow: inherit;
}

.header-logo{
  float: left;
  padding: 10px;
}

.shop-name {
  color: #EB3223;
  font-weight: bold;
  font-size: x-large;
  list-style: none;
}
.logo-image{
  max-width: 105px;
}

.search{
    flex: auto;
    float: right;
    display: flex;
}

footer{
  width: 100%;
  justify-content: center;
  display: inline-flex;
}

.footer-logo{
  width: 200px;
}

.footer-logo-image > img {
  width: 165px;
}
.footer-menu{
    display: inline-block;
}

.footer-menu, .footer-menu > ul{
  list-style: none;
  padding: 0px 25px 0px 0px;
}

.footer-links > li > a{
  text-decoration: none;
  color: black;
  font-size: smaller;
}

.footer-menu > li > a{
  font-weight: bold;
}

.footer-links > li{
  text-decoration: none;
  color: black;
}

.footer-menu-wrapper{
  display: flex;
  position: relative;
  float: right;
}

.menu-title{
  font-weight: bold;
}

.header-cart{
  float: right;
  padding: 44px;

}

.cart svg path{
  fill: white;
}

.table {
  display: table;   /* Allow the centering to work */
  margin: 0 auto;
}

.site-nav{
  align-content: center;
  list-style: none;
  display: inline-flex;
  padding-top: 20px;
}

.nav-links > a{
  color: white;
  text-decoration: none;
  font-weight: bold;
  font-size: x-large;
}
.nav-links{
  padding: 10px;
}

.product-info-wrapper{
  width: 400px;
  padding: 25px;
  margin-left: 25%;
}

.product-info-wrapper h1{
  margin-bottom: 0px;
}
.product-wrapper{
  display: flex;
}

.variant-selector-wrapper > select{
  display: flex;
  width: 300px;
  height: 32px;
  -webkit-appearance: button;
  border-radius: 3px;
  padding: .5em;
  background-color: white;
}

.quantity-selector input{
  -webkit-appearance: button-bevel;
  width: 25px;
  text-align: center;
}

.increment-button{
  margin-left: -13px;
}

.price-wrapper{
  margin-bottom: 20px;
}

.cart-button{
  margin-top: 10px;
  user-select: none;
  -webkit-appearance: none;
  text-decoration: none;
  text-align: center;
  vertical-align: middle;
  cursor: pointer;
  border: 1px solid transparent;
  border-radius: 2px;
  background-color: /*!setting.color_button{*/#000000/*}*/;
  color: /*!setting.color_button_text{*/white/*}*/;
  font-family: "Work Sans", sans-serif;
  font-style: normal;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.08em;
  font-size: 14px;
  width: 300px;
  height: 35px;
}

.rte{
  text-align: -webkit-center;
}





