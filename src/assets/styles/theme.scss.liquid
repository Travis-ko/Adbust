.product-information{
  display: flex;
  flex-wrap: wrap;
  padding-top: 30px;
}
.product-information-image-wrapper{
  flex: 1 1 250px;
}

.product-rte{
  flex: 1 1 400px;
}

.product-title-wrapper{
  flex: 1 1 800px;
}

.cont-shopping-wrapper{
  padding: 10px 10px 10px 50px;
}
.cont-shopping-wrapper img{
  max-width: 45px;
  max-height: 55px;
}

.cont-shopping-wrapper a{
  display: flex;
  text-decoration: none;
  width: 200px
}
.cont-shopping-wrapper p{
  padding-left: 15px;
  padding-top: 2px;
  color: #EB3223;
}

.product-title-wrapper h1{
  display: flex;
  justify-content: center;
  width: 400px;
  text-align: -webkit-center;
}

.increment-button, .decrement-button{
  -webkit-appearance: button-bevel;
  cursor: pointer;
}

.product-form{
  display: flex;
  justify-content: center;
  width: 65%;
  border: 1px solid lightgrey;
  box-sizing: border-box;
  border-radius: 3px;
  background-color: #80808040;
}

.form-wrapper{
  padding: 50px;
  height: 150px;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.add-to-cart-wrapper{
  display: flex;
  position: relative;
  flex: 1 1 33%;
  justify-content: center;
  padding-top: 20px;
  margin: 20px;
  flex-wrap: wrap;
}

.add-to-cart-wrapper div{
  display: flex;
  justify-content: center;
  flex: 1 1 250px;
}

.add-to-cart-wrapper button{
  display: flex;
  justify-content: center;
  flex: 1 1 250px;
  margin-bottom: 20px

}

#product-quantity-selector{
  display: flex;
  position: relative;
  flex: 1 1 33%;
  justify-content: center;
  padding-top: 50px;
  border-right: 2px solid black;
  margin: 20px;
}

#product-quantity-selector > button, input{
  height: 15px;
  background: transparent;
  color: #eb3223;
}

.selector-wrapper{
  display: flex;
  position: relative;
  flex: 1 1 33%;
  justify-content: center;
  padding-top: 20px;
  border-right: 2px solid black;
  margin: 20px;
  flex-wrap: wrap;
}

.selector-wrapper label{
  display: flex;
  justify-content: center;
  flex: 1 1 250px;
}

.selector-wrapper select{
  display: flex;
  justify-content: center;
  margin-bottom: 20px;
  width: 70%;
}

form-wrapper form{
  min-width: 450px;
}

