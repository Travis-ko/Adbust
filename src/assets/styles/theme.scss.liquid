.header{
display: inherit;
text-align: center;
margin: -10px;
background: black;
min-height: 110px;
}

.header > div {
display: inline-block;
flex-grow: inherit;
}

.header-logo{
  float: left;
  padding: 10px;
}

.shop-name {
  color: #EB3223;
  font-weight: bold;
  font-size: x-large;
  list-style: none;
}
.logo-image{
  max-width: 105px;
}

.search{
    flex: auto;
    float: right;
    display: flex;
}

footer{
  justify-content: center;
  display: inline-flex;
  background: white;
  width: 102%;
  margin-left: -10px;
  margin-bottom: -10px;
  padding-top: 20px;
  border-top: 1px solid black;
}

.footer-logo{
  width: 200px;
}

.footer-logo-image > img {
  width: 165px;
}
.footer-menu{
    display: inline-block;
}

.footer-menu, .footer-menu > ul{
  list-style: none;
  padding: 0px 25px 0px 0px;
}

.footer-links > li > a{
  text-decoration: none;
  color: black;
  font-size: smaller;
}

.footer-menu > li > a{
  font-weight: bold;
}

.footer-links > li{
  text-decoration: none;
  color: black;
}

.footer-menu-wrapper{
  display: flex;
  position: relative;
  float: right;
}

.menu-title{
  font-weight: bold;
}

.header-cart{
  float: right;
  padding: 44px;

}

.cart svg path{
  fill: white;
}

.table {
  display: table;   /* Allow the centering to work */
  margin: 0 auto;
}

.site-nav{
  align-content: center;
  list-style: none;
  display: inline-flex;
  padding-top: 20px;
}

.nav-links > a{
  color: white;
  text-decoration: none;
  font-weight: bold;
  font-size: x-large;
}
.nav-links{
  padding: 10px;
}

.product-info-wrapper{
  width: 400px;
  padding: 25px;
  margin-left: 25%;
}

.product-info-wrapper h1{
  margin-bottom: 0px;
}
.product-wrapper{
  display: flex;
  margin: 30px;
}

.variant-selector-wrapper > select{
  display: flex;
  width: 300px;
  height: 32px;
  -webkit-appearance: button;
  border-radius: 3px;
  padding: .5em;
  background-color: white;
}

.quantity-selector input{
  -webkit-appearance: button-bevel;
  width: 25px;
  text-align: center;
}

.increment-button{
  margin-left: -13px;
}

.price-wrapper{
  margin-bottom: 20px;
}

.cart-button{
  margin-top: 10px;
  user-select: none;
  -webkit-appearance: none;
  text-decoration: none;
  text-align: center;
  vertical-align: middle;
  cursor: pointer;
  border: 1px solid transparent;
  border-radius: 2px;
  background-color: /*!setting.color_button{*/#000000/*}*/;
  color: /*!setting.color_button_text{*/white/*}*/;
  font-family: "Work Sans", sans-serif;
  font-style: normal;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.08em;
  font-size: 14px;
  width: 300px;
  height: 35px;
}

.rte{
  text-align: -webkit-center;
}

.product-image img{
  width: 400px;
}

///////
.product-information{
  display: flex;
  flex-wrap: wrap;
  padding-top: 30px;
}
.product-information-image-wrapper{
  flex: 1 1 250px;
}

.product-rte{
  flex: 1 1 400px;
}

.product-title-wrapper{
  flex: 1 1 800px;
}

.cont-shopping-wrapper{
  padding: 10px 10px 10px 50px;
}
.cont-shopping-wrapper img{
  max-width: 45px;
  max-height: 55px;
}

.cont-shopping-wrapper a{
  display: flex;
  text-decoration: none;
  width: 200px
}
.cont-shopping-wrapper p{
  padding-left: 15px;
  padding-top: 2px;
  color: #EB3223;
}

.product-title-wrapper h1{
  display: flex;
  justify-content: center;
  width: 400px;
  text-align: -webkit-center;
}

.increment-button, .decrement-button{
  -webkit-appearance: button-bevel;
  cursor: pointer;
}

.product-form{
  display: flex;
  justify-content: center;
  width: 65%;
  border: 1px solid lightgrey;
  box-sizing: border-box;
  border-radius: 3px;
  background-color: #80808040;
}

.form-wrapper{
  padding: 50px;
  height: 150px;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.add-to-cart-wrapper{
  display: flex;
  position: relative;
  flex: 1 1 33%;
  justify-content: center;
  padding-top: 20px;
  margin: 20px;
  flex-wrap: wrap;
}

.add-to-cart-wrapper div{
  display: flex;
  justify-content: center;
  flex: 1 1 250px;
}

.add-to-cart-wrapper button{
  display: flex;
  justify-content: center;
  flex: 1 1 250px;
  margin-bottom: 20px

}

#product-quantity-selector{
  display: flex;
  position: relative;
  flex: 1 1 33%;
  justify-content: center;
  padding-top: 50px;
  border-right: 2px solid black;
  margin: 20px;
}

#product-quantity-selector > button, input{
  height: 15px;
  background: transparent;
  color: #eb3223;
}

.selector-wrapper{
  display: flex;
  position: relative;
  flex: 1 1 33%;
  justify-content: center;
  padding-top: 20px;
  border-right: 2px solid black;
  margin: 20px;
  flex-wrap: wrap;
}

.selector-wrapper label{
  display: flex;
  justify-content: center;
  flex: 1 1 250px;
}

.selector-wrapper select{
  display: flex;
  justify-content: center;
  margin-bottom: 20px;
  width: 70%;
}

form-wrapper form{
  min-width: 450px;
}

