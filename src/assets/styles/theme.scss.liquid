  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  border-top: 2px solid black;
  width: 95%;
  margin-left: 3%;
  margin-bottom: 50px;
}

.collection-list a{
  flex: 1 3;
  text-decoration: none;
  color: black;
  font-weight: bold;
}

.collection-list__title{
  flex: 1 1 2000px;
  text-align: center;
  text-decoration: underline;
}

.collection-list__image div{
  display: flex;
  justify-content: center;
  height: 350px;
}

.col-title{
  display: flex;
  justify-content: center;
}



