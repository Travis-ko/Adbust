<div class="footer-menu">
  {%- assign footer_linklist_4 = section.settings.footer_linklist_4 -%}
  {% if linklists[footer_linklist_4].links.size > 0 %}
    <li><a>{{ linklists[footer_linklist_4].handle}}</a></li>
    <ul class="footer-links">
      {% for link in linklists[footer_linklist_4].links %}
        <li><a href="{{ link.url }}">{{ link.title }}</a></li>
      {% endfor %}
    </ul>
  {% endif %}
  </div>
</div>
{%comment%}
//Shopify Copyright//
  <div>
    <small>{{ 'layout.footer.copyright' | t }} &copy; {{ 'now' | date: "%Y" }}, {{ shop.name | link_to: '/' }}. {{ powered_by_link }}</small>
  </div>
  {%endcomment%}
</footer>

{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "link_list",
        "id": "footer_linklist",
        "label": "First menu",
        "default": "footer"
      },
      {
        "type": "link_list",
        "id": "footer_linklist_2",
        "label": "Second menu",
        "default": "footer"
      },
      {
        "type": "link_list",
        "id": "footer_linklist_3",
        "label": "Third menu",
        "default": "footer"
      },
      {
        "type": "link_list",
        "id": "footer_linklist_4",
        "label": "Fourth menu",
        "default": "footer"
      },
      {
        "type": "checkbox",
        "id": "show_payment_icons",
        "label": "Show payment icons",
        "default": false
      },
      {
        "type": "image_picker",
        "id": "footer-logo",
        "label": "Footer Logo image"
      }
    ]
  }

{% endschema %}
