<footer>
  <div class="footer-logo">
      <a href="/" class="footer-logo-image">
          <img class="footer-logo-image" src="{{ section.settings.footer-logo | img_url: image_size }}"
              srcset="{{ section.settings.footer-logo | img_url: image_size }} 1x, {{ section.settings.footer-logo | img_url: image_size, scale: 2 }} 2x"
              alt="{{ section.settings.footer-logo.alt | default: shop.name }}">
            </a>
  </div>

{%comment%}
  {%- assign social_accounts = 'Facebook, Twitter, Pinterest, Instagram, Snapchat, Tumblr, YouTube, Vimeo,' | split: ', ' -%}
  <ul>
    {% for social in social_accounts %}
      {%- assign social_handle = social | handleize -%}
      {% capture social_link %}social_{{ social_handle }}_link{% endcapture %}
      {% capture social_icon %}icon-{{ social_handle }}{% endcapture %}

      {% if settings[social_link] != blank %}
        <li>
          <a href="{{ settings[social_link] }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: social }}">
            {% include social_icon %}
            <span class="icon-fallback-text">{{ social }}</span>
          </a>
        </li>
      {% endif %}

    {% endfor %}
  </ul>

  {% if section.settings.show_payment_icons %}
    {% unless shop.enabled_payment_types == empty %}
      <span class="visually-hidden">{{ 'layout.footer.payment_methods' | t }}</span>
      <ul class="payment-icons">
        {% for type in shop.enabled_payment_types %}
          <li>
            {{ type | payment_type_svg_tag: class: 'icon' }}
          </li>
        {% endfor %}
      </ul>
    {% endunless %}
  {% endif %}
{%endcomment%}
<div class="footer-menu-wrapper">
  <div class="footer-menu">
  {%- assign footer_linklist = section.settings.footer_linklist -%}
  {% if linklists[footer_linklist].links.size > 0 %}
    <li><a>{{ linklists[footer_linklist].handle}}</a></li>
    <ul class="footer-links">
      {% for link in linklists[footer_linklist].links %}
        <li><a href="{{ link.url }}">{{ link.title }}</a></li>
      {% endfor %}
    </ul>
  {% endif %}
  </div>
<div class="footer-menu">
  {%- assign footer_linklist_2 = section.settings.footer_linklist_2 -%}
  {% if linklists[footer_linklist_2].links.size > 0 %}
    <li><a>{{ linklists[footer_linklist_2].handle}}</a></li>
    <ul class="footer-links">
      {% for link in linklists[footer_linklist_2].links %}
        <li><a href="{{ link.url }}">{{ link.title }}</a></li>
      {% endfor %}
    </ul>
  {% endif %}
  </div>
<div class="footer-menu">
  {%- assign footer_linklist_3 = section.settings.footer_linklist_3 -%}
  {% if linklists[footer_linklist_3].links.size > 0 %}
    <li><a>{{ linklists[footer_linklist_3].handle}}</a></li>
    <ul class="footer-links">
      {% for link in linklists[footer_linklist_3].links %}
        <li><a href="{{ link.url }}">{{ link.title }}</a></li>
      {% endfor %}
